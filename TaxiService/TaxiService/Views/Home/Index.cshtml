@model SelectedVehicleDetailsViewModel


<div class="row min-vh-100 align-items-center page-main-row">
    <div class="col-4 offset-4 mb-5 px-0">

        <form asp-action="Index" method="post" class="form-horizontal" role="form">

            <div class="form-row mx-0">
                <div class="form-group col-6 align-self-center d-flex flex-column justify-content-start align-items-start px-0">
                    <select asp-for="SelectedVehicleType" asp-items="@(new SelectList(Model.VehicleTypes,"Name","Name"))">
                        <option value="">Выберите тип авто</option>
                    </select>
                    <span asp-validation-for="SelectedVehicleType" class="text-danger"></span>
                </div>

                <div class="form-group d-flex flex-column col-6 check-boxes-wrap px-0">
                    <div class="mx-auto">
                        @for (int i = 0; i < Model.AdditionalComforts.Count; i++)
                        {
                            <div class="form-group mb-0 mt-1">
                                <input asp-for="@Model.AdditionalComforts[i].IsSelected" type="checkbox" />
                                <label asp-for="@Model.AdditionalComforts[i].Name">@Model.AdditionalComforts[i].Name</label>
                                <input type="hidden" asp-for="@Model.AdditionalComforts[i].Price" />
                                <input type="hidden" asp-for="@Model.AdditionalComforts[i].Name" />
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="form-row mx-0 mt-5">
                <a class="order-btn col-12" href="#" onclick="$(this).closest('form').submit()">Продолжить</a>
            </div>
        </form>

    </div>
</div>

@Html.Raw(@TempData.Get<string>("alertMessage"))